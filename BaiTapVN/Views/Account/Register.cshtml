@model BaiTapVN.Models.RegisterModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .form-control {
        width: 40%;
        box-sizing: border-box;
        margin: 10px;
    }

    .inline-error {
        display: inline-block;
        margin-left: 10px;
        color: red;
    }

    .form-group label {
        display: inline-block;
        width: 20%;
        vertical-align: top;
        padding-right: 10px;
        margin: 10px;
    }
</style>

<div id="templatemo_content_right">

    <h1>Đăng Ký Thành Viên</h1>
    <form asp-action="Register" method="post" onsubmit="return validateForm()">

        <div class="form-group">
            <label>Tên đăng nhập:</label>
            <input asp-for="@Model.Username" class="form-control" placeholder="Nhập tên đăng nhập của bạn" required />
        </div>
        <div class="form-group">
            <label >Mật khẩu:</label>
            <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Nhập mật khẩu của bạn" required />
        </div>
        <div class="form-group">
            <label >Xác nhận mật khẩu:</label>
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu của bạn" required />
            @if (!string.IsNullOrEmpty(ViewData["PasswordMismatchError"] as string))
            {
                <div class="inline-error">
                    @ViewData["PasswordMismatchError"]
                </div>
            }
        </div>
        <div class="form-group">
            <label >Họ và tên:</label>
            <input asp-for="@Model.FullName" class="form-control" placeholder="Nhập họ và tên của bạn" required />
        </div>
        <div class="form-group">
            <label >Email:</label>
            <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Nhập email của bạn" />
        </div>
        <div class="form-group">
            <label>Số điện thoại:</label>
            <input asp-for="@Model.Phone" class="form-control" placeholder="Nhập số điện thoại của bạn" />
        </div>
        <div class="form-group">
            <label >Địa chỉ:</label>
            <input asp-for="@Model.Address" class="form-control" placeholder="Nhập địa chỉ của bạn" />
        </div>
        <div class="form-group">
            <label >Ngày tháng năm sinh:</label>
            <input asp-for="@Model.DateOfBirth" type="date" class="form-control" placeholder="Nhập ngày tháng năm sinh của bạn" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
        </div>
        <button type="submit" class="btn btn-primary">Đăng ký</button>
    </form>

    <div class="cleaner_with_height">&nbsp;</div>

    <a href="index.html"><img src="~/images/templatemo_ads.jpg" alt="css template ad" /></a>


</div> <!-- end of content right -->

<script>
    function validateForm() {
        var username = document.getElementById('Username').value;
        var password = document.getElementById('Password').value;
        var confirmPassword = document.getElementById('ConfirmPassword').value;
        var fullName = document.getElementById('FullName').value;
        var email = document.getElementById('Email').value;
        var phone = document.getElementById('Phone').value;
        var address = document.getElementById('Address').value;
        var dateOfBirth = document.getElementById('DateOfBirth').value;

        // Kiểm tra xem bất kỳ trường nào đều không được để trống
        if (username === '' || password === '' || confirmPassword === '' || fullName === '' || email === '' || phone === '' || address === '' || dateOfBirth === '') {
            alert('Vui lòng nhập đầy đủ thông tin đăng ký');
            return false;
        }
        return true;
    }
</script>